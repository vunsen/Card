<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/tv_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="50sp"
        android:text="@string/type_Name"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_Name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_Name"
        android:ems="20"
        android:inputType="textPersonName"
        android:text="@string/Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_Name"
        android:layout_below="@id/tv_Name"
        android:layout_marginTop="10sp"
        android:text="@string/type_Title"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_Title"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_Name"
        android:ems="20"
        android:inputType="text"
        android:text="@string/Title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_Name"
        android:layout_below="@id/tv_Title"
        android:layout_marginTop="10sp"
        android:text="@string/type_Address"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_Address"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_Name"
        android:ems="20"
        android:inputType="textPostalAddress"
        android:text="@string/Address"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_Name"
        android:layout_below="@id/tv_Address"
        android:layout_marginTop="10sp"
        android:text="@string/type_Postcode"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_Postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_Postcode"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_Name"
        android:ems="20"
        android:inputType="number"
        android:text="@string/Postcode"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_Name"
        android:layout_below="@id/tv_Postcode"
        android:layout_marginTop="10sp"
        android:text="@string/type_Phone"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_Phone"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_Name"
        android:ems="20"
        android:inputType="phone"
        android:text="@string/Phone"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Mailbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_Name"
        android:layout_below="@id/tv_Phone"
        android:layout_marginTop="10sp"
        android:text="@string/type_Mailbox"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_Mailbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_Mailbox"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_Name"
        android:ems="20"
        android:inputType="textEmailAddress"
        android:text="@string/Mailbox"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Autograph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_Name"
        android:layout_below="@id/tv_Mailbox"
        android:layout_marginTop="10sp"
        android:text="@string/type_Autograph"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_Autograph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_Autograph"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_Name"
        android:ems="20"
        android:inputType="text"
        android:text="@string/Autograph"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_Name"
        android:layout_below="@id/tv_Autograph"
        android:layout_marginTop="10sp"
        android:text="@string/type_Homepage"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_Homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_Homepage"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_Name"
        android:ems="200"
        android:inputType="textUri"
        android:text="@string/Homepage"
        android:textSize="16sp" />
    <!--
        <CheckBox
	    android:id="@+id/cb_Reset"
	    android:layout_alignLeft="@id/tv_Name"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_below="@id/tv_Homepage"
        android:text="@string/Reset"/>
    -->

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_Name"
        android:layout_below="@id/tv_Homepage"
        android:layout_marginTop="30sp"
        android:text="@string/photo"
        android:textSize="16sp" />

    <Gallery
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/et_Name"
        android:layout_below="@id/tv_Homepage"
        android:layout_marginTop="30sp"
        android:layout_toRightOf="@id/tv_photo" />

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_Name"
        android:layout_below="@id/tv_photo"
        android:layout_marginTop="50sp"
        android:text="@string/head"
        android:textSize="16sp" />

    <Gallery
        android:id="@+id/gallery_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/et_Name"
        android:layout_below="@id/gallery"
        android:layout_marginTop="30sp"
        android:layout_toRightOf="@id/tv_head" />

    <Button
        android:id="@+id/bt_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/Cancel" />

    <Button
        android:id="@+id/bt_Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/bt_Cancel"
        android:text="@string/Confirm" />

</RelativeLayout>